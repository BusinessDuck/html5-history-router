{
    "compilerOptions": {
      "target": "es5",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "allowJs": true,
      "outDir": "./lib",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "lib": ["ESNext", "DOM"]
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": ["node_modules", "./lib/"],
}
